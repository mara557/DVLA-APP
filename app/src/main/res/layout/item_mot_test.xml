<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/completedDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Date: 2023-01-01"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <TextView
            android:id="@+id/testResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Result: Pass"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/testNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Number: 123456"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/expiryDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date: 2024-01-01"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/odometerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odometer: 15000 KM"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="4dp" />

        <!-- Nested RecyclerView for Comments -->
        <TextView
            android:id="@+id/commentsHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginTop="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
